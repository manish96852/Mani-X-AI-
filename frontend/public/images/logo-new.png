<svg width="64" height="64" viewBox="0 0 64 64" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="grad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#00D4FF"/>
      <stop offset="50%" style="stop-color:#0099FF"/>
      <stop offset="100%" style="stop-color:#6C5CE7"/>
    </linearGradient>
    <filter id="glow">
      <feGaussianBlur stdDeviation="1" result="coloredBlur"/>
      <feMerge> 
        <feMergeNode in="coloredBlur"/>
        <feMergeNode in="SourceGraphic"/>
      </feMerge>
    </filter>
  </defs>
  
  <!-- Background -->
  <rect width="64" height="64" rx="12" fill="#0F0F23"/>
  
  <!-- Main logo shape -->
  <g transform="translate(32, 32)">
    <!-- Outer frame -->
    <polygon points="-20,-12 -20,12 0,24 20,12 20,-12 0,-24" 
             fill="none" 
             stroke="url(#grad)" 
             stroke-width="2" 
             filter="url(#glow)"/>
    
    <!-- Inner fill -->
    <polygon points="-15,-9 -15,9 0,18 15,9 15,-9 0,-18" 
             fill="url(#grad)" 
             opacity="0.3"/>
    
    <!-- Central AI core -->
    <circle cx="0" cy="0" r="8" fill="url(#grad)"/>
    <circle cx="0" cy="0" r="6" fill="#FFFFFF"/>
    <circle cx="0" cy="0" r="4" fill="url(#grad)"/>
    
    <!-- Neural nodes -->
    <circle cx="-10" cy="-6" r="2" fill="#FFFFFF" opacity="0.9"/>
    <circle cx="10" cy="-6" r="2" fill="#FFFFFF" opacity="0.9"/>
    <circle cx="-10" cy="6" r="2" fill="#FFFFFF" opacity="0.9"/>
    <circle cx="10" cy="6" r="2" fill="#FFFFFF" opacity="0.9"/>
    
    <!-- Connections -->
    <line x1="-10" y1="-6" x2="0" y2="0" stroke="#FFFFFF" stroke-width="1.5" opacity="0.7"/>
    <line x1="10" y1="-6" x2="0" y2="0" stroke="#FFFFFF" stroke-width="1.5" opacity="0.7"/>
    <line x1="-10" y1="6" x2="0" y2="0" stroke="#FFFFFF" stroke-width="1.5" opacity="0.7"/>
    <line x1="10" y1="6" x2="0" y2="0" stroke="#FFFFFF" stroke-width="1.5" opacity="0.7"/>
  </g>
  
  <!-- Optional small text -->
  <text x="32" y="55" font-family="Arial, sans-serif" font-size="8" font-weight="bold" 
        fill="#00D4FF" text-anchor="middle" opacity="0.8">MÃ—AI</text>
</svg>
